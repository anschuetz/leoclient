# supplemental profile for linuxmuster client

# no redirection for local users
if test -n "$USER" && ! grep -q ^${USER}: /etc/passwd; then

	# read linuxmuster-client default variables
	. /usr/share/linuxmuster-client/config
	. /usr/share/linuxmuster-client/helperfunctions.sh

	# Redirects KDE Home to /tmp
	export KDEHOME=/tmp/.kde-${USER}

	# user's desktop has also to be in /tmp
	export DESKTOP=/tmp/Desktop-${USER}

	# Redirects access token file for dcopserver to /tmp
	export ICEAUTHORITY=/tmp/${USER}_ICEauthority_${HOSTNAME}

	# Redirects the file "how to access the dcopserver" to /tmp
	export DCOPAUTHORITY=/tmp/${USER}_DCOPserver-${HOSTNAME}_on_${DISPLAY}


	if test -f /usr/bin/italc-raumanpassung.sh; then
	 /usr/bin/italc-raumanpassung.sh
	fi

	if test -f /usr/bin/openoffice-vorlagenverz-kopieren.sh; then
	 /usr/bin/openoffice-vorlagenverz-kopieren.sh
	fi

	if test -f /usr/bin/desktop-icons-hinzu.sh; then
	 /usr/bin/desktop-icons-hinzu.sh
	fi

	if test -f /usr/bin/virtualbox-vm-conf-kopieren.sh; then
	 /usr/bin/virtualbox-vm-conf-kopieren.sh
	fi

	if test -f /usr/bin/standarddrucker-nach-raum.sh; then
	 /usr/bin/standarddrucker-nach-raum.sh
	fi

	if test -d /media/localdisk; then
	 /bin/chmod 777 /media/localdisk
	fi

	if test -d /virtual/Machines/winXP-2010/Snapshots; then
	 /bin/chmod -R 777 /virtual/Machines/winXP-2010/Snapshots
	fi

fi

# for localuser
if [ "$USER" = "localuser" ]; then

	if test -f /usr/bin/virtualbox-vm-conf-kopieren.sh; then
	 /usr/bin/virtualbox-vm-conf-kopieren.sh
	fi

	if test -f /usr/bin/standarddrucker-nach-raum.sh; then
	 /usr/bin/standarddrucker-nach-raum.sh
	fi

	if test -d /media/localdisk; then
	 /bin/chmod 777 /media/localdisk
	fi

	if test -d /virtual/Machines/winXP-2010/Snapshots; then
	 /bin/chmod -R 777 /virtual/Machines/winXP-2010/Snapshots
	fi

fi

